<% provide(:title, "Log in") %>
<div class="login">
<h2>Log in</h2>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :id %>
      <%= f.text_field :id, class: 'form-control', value: 'admin' %><p><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', value: '1234' %><p><br>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>