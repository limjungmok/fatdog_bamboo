<div class="text-center">
		<%= form_for(@board) do |f| %>
		<div class="button_tag">
		<input class="btn btn-default" :b_category type="submit" value="연애">
		<input class="btn btn-default" :b_category type="submit" value="고민">
		<input class="btn btn-default" :b_category type="submit" value="학과">
		<input class="btn btn-default" :b_category type="submit" value="건의">
		<input class="btn btn-default" :b_category type="submit" value="기타">
		</div>
		<%= f.text_area :b_content, class: "text_area", size: "40x10",
		placeholder: "자유롭게 적어주시되, 심한 비방 혹은 욕설을  사용할 경우에는 삭제됩니다." %>
		<%= f.submit "Submit", class: "btn btn-lg btn-success",
		data: { confirm: '정말 제보하시겠어요?' } %>

		<% end %>
</div>