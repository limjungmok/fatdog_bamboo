<% provide(:title, "글쓰기") %>
<div class="text-center">
	<%= form_for(@board) do |f| %>
		<div id ="test">
		<%= f.text_area :b_category, class: "b_category_area",
		size: "40x2", placeholder: "해시태그를 입력해주세요." %>
		<button type="button" class="btn btn-xs btn-success" data-toggle="tooltip"
		data-placement="right" title="태그명을 입력하고 띄어쓰기를 하면 자동으로 #(이)가 추가됩니다.">
		?</button>
		</div>
		<input type="button" value= "태그추가" id="test2">
		<input type="button" value= "처음으로" id="test3">
		<%= f.text_area :b_content, class: "b_content_area",
		size: "40x15", placeholder: "자유롭게 적어주시되, 심한 비방 혹은 욕설을
사용할 경우에는 삭제됩니다." %>
		<%= f.submit "Submit", class: "btn btn-success",
		data: { confirm: '정말 제보하시겠어요?' } %>
		<% end %>
</div>

<script>
	$('document').ready(function() {
		var count = 0;
		var total = "";
		var word = "";
		var arr = new Array();
		$("#test2").hide();
		$("#test3").hide();
 		$("#board_b_category").keydown(function (key) {
 			
                if (key.keyCode == 32) {
                    word = $("#board_b_category").val();
                    arr[count] = word;
                    console.log("word = " + word + "count = "+ count);
                    total = total + "<a href='#'>#" + word +"</a> ";
					$("#test").html(total);
					$("#test2").show();
					$("#test3").show();
					for(i=0;i<arr.length;i++){
						console.log("arr  = " + arr[i]);
					}
					$("#board_b_category").val(arr);
					count++;
                }
        });
        $("#test2").click(function() {
        	$("#test2").hide();
        	$("#test3").hide();
        	$("#test").append("<textarea class='b_category_area' placeholder='해시태그를 입력해주세요.' name='board[b_category]' id='board_b_category' cols='40' rows='2'></textarea><button type='button' class='btn btn-xs btn-success' data-toggle='tooltip' data-placement='right' title='태그명을 입력하고 띄어쓰기를 하면 자동으로 #(이)가 추가됩니다.'>?</button>");
        	$("#board_b_category").keydown(function (key) {
 			
                if (key.keyCode == 32) {
                    word = $("#board_b_category").val();
                    arr[count] = word;
                    console.log("word = " + word + "count = "+ count);
                    total = total + "<a href='#'>#" + word +"</a> ";
					$("#test").html(total);
					$("#test2").show();
					$("#test3").show();
					for(i=0;i<arr.length;i++){
						console.log("arr  = " + arr[i]);
					}
					$("#board_b_category").val(arr);
					count++;
                }
        	});
		});
		$("#test3").click(function() {
			location.reload();
		});

		$('#new_board').submit(function(){ 
    		$('<input>').attr('type', 'hidden')
            .attr('name', "board[b_category]")
            .attr('value', arr)
            .appendTo('#new_board');
    	});
	});


</script>