<% provide(:title, "게시판") %>
<body>
<div class="test_css">
	<%= @boards.each do |b| %>

		<label><%= b.b_content %></label>
		<label><%= b.b_category %></label>
		<label><%= b.b_click_count %></label>
		<label><%= b.b_like %></label>
		<label><%= b.created_at %></label>

	<%= link_to "UPDATE", "#", class: "btn btn-warning btn-sm" %>
	<%= link_to "DELETE", "#", class: "btn btn-danger btn-sm" %>
	<%= link_to "Open modal", "#my-modal", :class => "btn", "data-toggle" => "modal" %>
	<a href="#" onclick="this.style.backgroundColor='#990000'">Paint it red</a>
	<a href="#" onclick="this.style.backgroundColor='#009900';this.style.color='#FFFFFF';">Paint it green</a>
	<p>
	</p>
	<% end %>
</div>


<div class="modal hide fade" id="my-modal" title="My modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    Modal Body
  </div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn" data-dismiss="modal">Close</button>
  </div>
</div>
</body>