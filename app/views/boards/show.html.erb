<html>
<head>
  <title></title>
</head>
<body>
  <div class="text-center">
          조회수 : <%= @board.b_click_count %> |  
          추천수 : <span id="like"><%= @board.b_like %></span>
          <span id="like_button"><p>
            <div class = "thumbs">
              <%= link_to "추천", 
                edit_like_path(:id => @board.id), 
                method: :patch, 
                remote: true, 
                class:"glyphicon glyphicon-thumbs-up"%><p><br><p>
            </div>
          </span>
    <div class = "board-show">
      <td>
         # <%=link_to @board.b_category, boards_path(:b_category => @board.b_category) %>
      </td>
    </div>

    <hr>
    <div class = "board-content-show">
      <b><%= @board.b_content %></b>
    </div>
    <hr>

    <div class = "comment-info-show">
      댓글 보기
      <p>
    </div>
    <div class = "comment-show">
      <table class="table">
      <tr>
          <td>작성</td>
          <td>내용</td>
          <td>작성일</td>
      </tr>
      <% @board.replies.each do |r| %>  
        <tr>
          <td>익명<%= r.id %></td>
          <td><%= r.r_content %></td>
          <td><%= r.created_at.strftime("%d %b. %Y") %></td>
        </tr>
      <% end %>
      </table>
    </div>
    
    <p>
    <%= form_for([@board, @board.replies.build]) do |f| %>
      <div class="comment_write">
        <hr>
        익명 : 
        <%= f.text_field :r_content, placeholder: " 댓글을 입력하세요." %><p>
        <p>
        <%= f.submit "등록", class:"btn btn-success btn-sm"%>
      </div>
    <% end %>
  </div>

</body>
</html>

	